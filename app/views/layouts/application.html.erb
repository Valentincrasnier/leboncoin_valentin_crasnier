<!DOCTYPE html>
<html>
<head>
  <title>Leboncoin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-static-top">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Leboncoin</a>


      </div>


      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <% if user_signed_in? %>
        <ul class="nav navbar-nav">
          <li><%= link_to "Acceuil", annonces_path, method: :get %></li>
          <li><%= link_to "Mes annonces", mes_annonces_path(:user_id), method: :get %></li>
          <li><%= link_to "Déposer une annonce", new_annonce_path, method: :get %></li>
          <li><%= link_to "Mon compte", edit_user_registration_path, method: :get %></li>
        </ul>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li><%= link_to "Déconnexion", destroy_user_session_path, method: :delete %></li>
          <% else %>
          <li><%= link_to "connection", new_user_session_path, method: :get %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

<%= yield %>

</body>
</html>
